<%@ Register Assembly="AjaxControlToolkit" Namespace="AjaxControlToolkit" TagPrefix="ajaxToolkit" %>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title></title>
     <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.4.2.min.js" type="text/javascript"></script>
    <script type="text/javascript">

        function uploadStart(sender, args) {
        var userName = $get('<%=HiddenField2.ClientID %>').value;
           var file = sender._inputFile.files[0]; 
           var hashId = $get('<%=HiddenField1.ClientID %>').value;
           var filename = args.get_fileName();
           filename = filename.toLowerCase();

           if (filename.includes('.pdf')) {
               uploadPdf(file, userName, filename, hashId);
           } else {
               resizeAndUpload(file, userName, filename, hashId);
           }
        }

        function resizeAndUpload(file, userName, filename, hashId) {
            var reader = new FileReader();
            reader.onloadend = function () {
                var tempImg = new Image();
                tempImg.src = reader.result;
                tempImg.onload = function () {
                    var MAX_WIDTH = 1440; // you can keep any width you want
                    var MAX_HEIGHT = 960;  // you can keep any height you want
                    var tempW = tempImg.width;
                    var tempH = tempImg.height;

                    //calculating the ratio of width that needs to be resized.
                    //resizing the height in the same ratio as width.  
                    if (tempW > MAX_WIDTH) {
                        var ratio = tempW / MAX_WIDTH;
                        tempW = parseInt(tempW / ratio);
                        tempH = parseInt(tempH / ratio);
                    }
                    else {
                        if (tempH > MAX_HEIGHT) {
                            var ratio = tempW / MAX_HEIGHT;
                            tempW = parseInt(tempW / ratio);
                            tempH = parseInt(tempH / ratio);
                        }
                    }
                    var canvas = document.createElement('canvas');
                    canvas.width = tempW;
                    canvas.height = tempH;
                    var ctx = canvas.getContext("2d");
                    ctx.drawImage(this, 0, 0, tempW, tempH);
                    var dataURL = canvas.toDataURL("image/jpeg");
                    $.ajax({
                                                
                        url: "http://localhost:58007/api/images?hid=" + hashId + "&uid=" + userName + "&fnm=" + filename + "",
                        type: "POST",
                        data: 'image=' + dataURL,
                        contentType: "application/x-www-form-urlencoded",
                        success: function (data, textStatus, jqXHR) {
                            console.log('posted image');
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            console.log('error posting image');
                        }
                    });

                }
            }
            reader.readAsDataURL(file);    
        }

        function uploadPdf(file, userName, filename, hashId) {

            var reader = new FileReader();

            reader.onload = function (e) {
                var dataURL = reader.result;

                   $.ajax({
                                                
                        url: "http://localhost:58007/api/images?hid=" + hashId + "&uid=" + userName + "&fnm=" + filename + "",
                        type: "POST",
                        data: 'image=' + dataURL,
                        contentType: "application/x-www-form-urlencoded",
                        success: function (data, textStatus, jqXHR) {
                            console.log('posted image');
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            console.log('error posting image');
                        }
                    });

            }

            reader.readAsDataURL(file);

        }


